<%= render "navbar" %>
<div class="container m-4">
  <h1 class="text-primary"><%= @cocktail.name %></h1>
  <div class="d-flex mt-5">
    <%= cl_image_tag @cocktail.photo.key, height: 500, width: 500, crop: :fill %>
    <div class="ml-5">
      <div style="width: 50%;">
        <p>Ingredients: </p>
        <% @cocktail.doses.each do |dose| %>
          <ul class="list-group">
            <li class="list-group-item list-group-item-light d-flex justify-content-between">
              <div>
              <%= dose.ingredient.name %>
              <%= dose.description %>
              </div>
              <div class="div">
                <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} do%>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </li>
          </ul>
        <% end %>
      </div>
      <div style="width: 50%;">
        <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
      </div>
    </div>
  </div>
  <div class='mt-4'>
    <h4 class="text-primary m-3">Reviews</h4>
    <% @cocktail.reviews.each do |review| %>
        <ul class="list-group">
          <li class="list-group-item">
            <%= review.rating %>
            <%= review.content %>
          </li>
        </ul>
      <% end %>
    <%= render "reviews/new", review: @review %>
  </div>
</div>


